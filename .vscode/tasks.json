{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "SaassyAdmin.sln"],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch-server",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "src/SaassyAdmin.Client/Server/SaassyAdmin.Client.Server.csproj"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "csharp-watch",
        // Dummy pattern (no problems captured) â€“ we only need background start/stop detection
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Building.*",
          "endsPattern": ".*Application started.*"
        }
      }
    },
    {
      "label": "tailwind-build",
      "type": "shell",
      "command": "npm run tailwind:build",
      "problemMatcher": []
    },
    {
      "label": "tailwind-watch",
      "type": "shell",
      "command": "npm run tailwind:watch",
      "isBackground": true,
      "problemMatcher": {
        "owner": "tailwind",
        // Tailwind watch output isn't used for problem parsing; just detect ready state.
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          // Tailwind 3 CLI typically prints "Rebuilding..." or "Starting..." then a "Done in" line.
          "beginsPattern": "(Starting|Rebuilding).*",
          "endsPattern": "Done in .*"
        }
      }
    },
    {
      "label": "full-watch",
      "dependsOn": ["tailwind-watch", "watch-server"],
      "problemMatcher": []
    },
    {
      "label": "prelaunch-full",
      "dependsOn": ["tailwind-build", "build"],
      "problemMatcher": []
    }
  ]
}
